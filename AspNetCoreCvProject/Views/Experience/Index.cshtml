@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Şirket İsmi</th>
                <th scope="col" class="sort" data-sort="completion">Tarih</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="status">Güncelle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {


                <tr>
                    <th>@item.ExperienceID</th>
                    <th class="budget">@item.Name</th>
                    <td class="budget">@(((DateTime)item.Date).ToString("dd-MMM-yy"))</td>
                    <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-primary">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-outline-info" href="/Skill/AddSkill/">Deneyim Ekle</a>
</div>


