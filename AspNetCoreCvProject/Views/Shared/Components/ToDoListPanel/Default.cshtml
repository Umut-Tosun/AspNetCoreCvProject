@using EntityLayer.Concrete
@model List<ToDoList>
<div class="col-md-12 col-xl-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yapılıcaklar Listesi</h4>
            <div class="add-items d-flex">
                <input type="text" class="form-control todo-list-input" placeholder="Yeni bir görev...">
                <button class="add btn btn-primary todo-list-add-btn">Ekle</button>
            </div>
            <div class="list-wrapper">
                <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                    @foreach (var item in Model)
                    {
                        @if (item.Status == true)
                        {
                            <li class="completed">
                                <div class="form-check form-check-primary">
                                    <label class="form-check-label">
                                        <input class="checkbox" type="checkbox" checked> @item.Content
                                    </label>
                                </div>
                                <i class="remove mdi mdi-close-box"></i>
                            </li>
                        }
                        else
                        {
                            <li>
                                <div class="form-check form-check-primary">
                                    <label class="form-check-label">
                                        <input class="checkbox" type="checkbox"> @item.Content
                                    </label>
                                </div>
                                <i class="remove mdi mdi-close-box"></i>
                            </li>
                        }
                    }                
                </ul>
            </div>
        </div>
    </div>
</div>