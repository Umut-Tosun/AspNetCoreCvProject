@using EntityLayer.Concrete
@model List<Portfolio>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>               
                                <th> # </th>
                                <th> Ana Görsel </th>
                                <th> Proje Adı </th>
                                <th> URL </th>   
                                <th> Tamamlanma Durumu </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                      @item.PortfolioID
                                    </td>
                                    <td>
                                        <img src="@item.ImageUrl" alt="image" />
                                        <span class="pl-2"></span>
                                    </td>
                                    <td> @item.Name</td>
                                    <td> @item.ProjectUrl</td>                               
                                    <td> </td>                               
                                    <td>
                                        <div class="badge badge-outline-success">Tamamlandı</div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>